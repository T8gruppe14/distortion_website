---
const { variant } = Astro.props;
---

<button class={variant + " "}>
  <slot />
</button>

<style>
  button {
    padding: 0.7rem 3rem 0.7rem 3rem;
    border: none;
    cursor: pointer;
  }
  .blue_btn {
    background-color: #254167;
    color: white;
  }
  .blue_btn:hover {
    background-color: #ea5943;
    color: #2e2241;
  }

  .red_btn {
    background-color: #ea5943;
    color: #2e2241;
  }
  .red_btn:hover {
    background-color: #254167;
    color: white;
  }
</style>
